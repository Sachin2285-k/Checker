@model Checker.Models.FormData

@{
    ViewData["Title"] = "Index";
}

<h4>Enter Value</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckValue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="TextToCheck" class="form-control" />
                <span asp-validation-for="TextToCheck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
